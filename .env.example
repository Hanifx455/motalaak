# متغيرات البيئة لمنصة المتألق في التعليم

# منفذ الخادم
PORT=5000

# رابط قاعدة البيانات MongoDB
MONGODB_URI=mongodb://localhost:27017/motalk

# مفتاح سري لتوقيع رموز JWT
JWT_SECRET=your_jwt_secret_key_here

# مدة صلاحية رمز JWT (بالثواني)
JWT_EXPIRES_IN=86400

# بيئة التشغيل (development أو production)
NODE_ENV=development